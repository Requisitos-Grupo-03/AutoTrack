<section class="initial-page content-header">
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="login-tmp-box col-md-6">
      <div class="login-box">
        <div class="login-box-body">

          <p id="notice"><%= notice %></p>

          <center>
            <h2>Activity <%= @activity.id %></h2>
          </center>
          <p>
            <strong>Title:</strong>
            <%= @activity.title %>
          </p>

          <p>
            <strong>State:</strong>
            <%= @activity.state %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @activity.description %>
          </p>

          <p>
            <strong>Owner:</strong>
            <%= @activity.owner %>
          </p>

          <center>
            <%= link_to 'Edit', edit_activity_path(@activity) %> |
            <%= link_to 'Back', activities_path %>


            <br><br><p><%= link_to 'Generate PDF&#160&#160<i class="fa fa-file-pdf-o" aria-hidden="true"></i>'.html_safe, activity_path(@activity, format: "pdf"), target: "_blank", class: "btn btn-primary btn-block btn-flat btn-matheus" %></p>


          </center>

        </div>
      </div>
    </div>
  </div>
  <!-- </center> -->
</section>
