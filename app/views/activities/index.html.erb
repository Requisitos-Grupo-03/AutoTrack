<section class="initial-page content-header">
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class="login-tmp-box col-md-6">
      <!-- <div class="login-box"> -->
        <div class="login-box-body box-header">

          <p id="notice"><%= notice %></p>

          <center>
          <h1>Activities</h1>
        </center>

          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Title</th>
                <th>State</th>
                <th>Description</th>
                <th>Owner</th>
                <th>Action</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @activities.each do |activity| %>
                <%= render partial: 'activity', :locals => {activity: activity}%>

              <% end %>
            </tbody>
          </table>

          <br>

          <center>
          <%= link_to 'New Activity', new_activity_path, class: 'btn btn-primary btn-flat btn-matheus' %>
          <%= link_to 'Generate PDF&#160&#160<i class="fa fa-file-pdf-o" aria-hidden="true"></i>'.html_safe, activities_path(@activities, format: "pdf"), target: "_blank", class: "btn btn-primary btn-flat btn-matheus" %>
        </center>


        </div>
      </div>
    </div>
  <!-- </div> -->
</section>
