<div id="to-do-list", class="box box-primary">
  <div class="box-header">
    <i class="ion ion-clipboard"></i>

    <h3 class="box-title">To Do</h3>
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <ul class="todo-list">
      <% @activities =  Activity.all %>
      <% @activities.each do |activity| %>
        <% if activity.state == "todo" %>
          <%= render partial: 'activities/activities', locals: { activity: activity } %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <!-- /.box-body -->
  <div class="box-footer clearfix no-border">
    <%= link_to 'New Activity', new_activity_path, class: 'btn btn-default btn-flat btn-matheus pull-right', id: 'to-do-button'%>
  </div>
</div>


